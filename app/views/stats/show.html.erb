<div class="jumbotron p-3 p-md-5 text-white rounded bg-danger">
  <div class="col-md-12 px-0">
    <h1 class="display-5">Career Stats</h1>
    <p class="lead my-3">
      <div class="card-body d-flex flex-column align-items-start">
        <h3 class="mb-0">
              <!-- <p class="text-dark">Career Gamer Score</p> -->
        </h3>
        <table class="table table-hover table-bordered table-dark">
          <thead>
            <tr class="text-center text-uppercase">
              <th scope="col">Player</th>
              <th scope="col">Games Played</th>
              <th scope="col">Total Wins</th>
              <th scope="col">Win %</th>
              <th scope="col">PPG</th>
            </tr>
          </thead>
          <tbody>
            <% @ordered_players.each do |player| %>
              <tr class="text-center text-uppercase">
                <td style="background-color:#<%=player.color_code%>;"><%=player.name%></td>
                <td><%= player.scores.count %></td>
                <td><%= player.games.count %></td>
                <td><%= player.win_percentage %>%</td>
                <td><%= player.ppg %></td>
              </tr>
            <% end %>
          </tbody>
          <tbody>
          </tbody>
        </table>
        </div>
    </p>
  </div>
</div>
